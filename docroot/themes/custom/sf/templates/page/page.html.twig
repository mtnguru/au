<div role="document" class="page">
  <div id="header-background"></div>
  {%  if page.navigation %}
    <nav id="site-navigation">
      {{ page.navigation }}
    </nav>
  {% endif %}

  {%  if page.header %}
    <header id="site-header">
      {{ page.header }}
    </header>
  {% endif %}

  {%  if page.featured %}
    <section id="featured">
      <div class="columns">
        {{ page.featured }}
      </div>
    </section>
  {% endif %}

  {% if page.breadcrumb %}
    <section id="breadcrumb">
      <div class="outer-wrapper">
        {{ page.breadcrumb }}
      </div>
    </section>
  {% endif %}

  <main role="main" class="outer-wrapper">
    <a id="main-content" tabindex="-1"></a>

    {% if page.sidebar_first %}
      <aside id="sidebar-first" role="complementary" class="sidebar">
        {{ page.sidebar_first }}
      </aside>
    {% endif %}

    <section id="content">
      {{ page.content }}
    </section>

    {% if page.sidebar_second %}
      <aside id="sidebar-second" role="complementary" class="sidebar">
        {{ page.sidebar_second }}
      </aside>
    {% endif %}
  </main>

  <footer>
    <div class="links">
      {% if logged_in %}
        <p class="login"><a href="/user/logout">LOGOUT</a></p>
        <p class="investors"><a href="/investors/docs">INVESTOR DOCUMENTS</a></p>
      {% else %}
        <p class="login"><a class="login" href="/user/login?destination=/investors/docs">INVESTOR LOGIN</a></p>
      {% endif %}
      <p class="history"><a class="history" href="https://www.safireproject.com" target="_blank">SAFIRE HISTORY</a></p>
      <p class="contact"><a href="/contactus">CONTACT US</a></p>
    </div>
    <div class="aureon-logo">
      <div class="container">
        <a href="https://safireproject.com">
          <div class="logo">
            <img src="/themes/custom/sf/img/AureonLogo.png"/>
          </div>
          <div class="logo-blue">
            <img src="/themes/custom/sf/img/AureonLogoBlue.png"/>
          </div>
        </a>
      </div>
    </div>
  </footer>
</div>

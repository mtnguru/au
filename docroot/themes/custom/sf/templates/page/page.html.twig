      {% if logged_in %}
        <p class="login"><a href="/user/logout">LOGOUT</a></p>
        <p class="investors"><a href="/investors/docs">INVESTOR DOCUMENTS</a></p>
      {% else %}
        <p class="login"><a class="login" href="/user/login">INVESTOR LOGIN</a></p>
      {% endif %}
    </div-->
    <div class="aureon-logo">
      <div class="container">
        <img src="/themes/custom/sf/img/aureon_logo.png" class="aureon"/>
        <!--img src="/themes/custom/sf/img/slogan1.png" class="slogan"/-->
      </div>
    </div>
  </footer>
</div>
